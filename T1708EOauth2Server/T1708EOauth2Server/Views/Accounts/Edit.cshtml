@model T1708EOauth2Server.Models.Account

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Account</h4>
<hr />
<div class="row">    
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="col-md-4">

                <fieldset>
                    <legend>Basic information</legend>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </fieldset>
            </div>
            <div class="col-md-4">
                <fieldset>
                    <legend>Personal information</legend>
                    <div class="form-group">
                        <label asp-for="UserInformation.FullName" class="control-label"></label>
                        <input asp-for="UserInformation.FullName" class="form-control" />
                        <span asp-validation-for="UserInformation.FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserInformation.Phone" class="control-label"></label>
                        <input asp-for="UserInformation.Phone" class="form-control" />
                        <span asp-validation-for="UserInformation.Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserInformation.Avatar" class="control-label"></label>
                        <input asp-for="UserInformation.Avatar" class="form-control" />
                        <span asp-validation-for="UserInformation.Avatar" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserInformation.Dob" class="control-label"></label>
                        <input asp-for="UserInformation.Dob" class="form-control" type="date" />
                        <span asp-validation-for="UserInformation.Dob" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserInformation.Address" class="control-label"></label>
                        <textarea asp-for="UserInformation.Address" class="form-control"></textarea>
                        <span asp-validation-for="UserInformation.Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-default" />
                        <input type="reset" value="Reset" class="btn btn-default" />
                    </div>
                </fieldset>
            </div>
        </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
